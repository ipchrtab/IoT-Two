<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SmokeFragment">

    <TextView
        android:id="@+id/textSmoke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/optical_density"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/sliderSmoke"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.948" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderSmoke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:stepSize="0.01"
        android:value="0.12"
        android:valueFrom="0"
        android:valueTo="0.25"
        app:layout_constraintBottom_toTopOf="@+id/switchSmoke"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tickColor="@color/teal_200"
        app:tickVisible="false" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchSmoke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:text="@string/sensor_activate"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sliderSmoke" />

</androidx.constraintlayout.widget.ConstraintLayout>